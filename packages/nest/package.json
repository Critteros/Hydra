{
  "name": "@hydra-ipxe/nest",
  "version": "0.0.0",
  "description": "Custom Nest.js modules used in the Hydra project",
  "license": "MIT",
  "author": "Szymon Kozio≈Ç <contact@critteros.dev>",
  "readme": "README.md",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "prettier": "@hydra-ipxe/prettier-config",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "exports": {
    "./db": {
      "types": "./dist/db/index.d.ts",
      "development": "./src/db/index.ts",
      "require": "./dist/db/index.cjs",
      "import": "./dist/db/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts",
        "dist/*/index.d.ts"
      ]
    }
  },
  "dependencies": {
    "@nestjs/common": "^10.2.7",
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@hydra-ipxe/eslint-config-hydra": "workspace:*",
    "@hydra-ipxe/prettier-config": "workspace:*",
    "@hydra-ipxe/tsconfig": "workspace:*",
    "@hydra-ipxe/utils": "workspace:*",
    "@vitest/coverage-v8": "^2.0.5",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "keywords": [
    "nest"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@nestjs/common": ">=10.2.0",
    "drizzle-orm": ">=0.33.0",
    "postgres": ">=3.4.0",
    "reflect-metadata": ">=0.2.0"
  }
}
