{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@hydra-ipxe/tsconfig/base",
  "exclude": ["node_modules", "dist", "build", "coverage"],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
