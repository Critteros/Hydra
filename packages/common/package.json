{
  "name": "@hydra-ipxe/common",
  "version": "0.0.0",
  "description": "Common code used between the hydra-ipxe server and web",
  "license": "MIT",
  "author": "Szymon Kozio≈Ç <contact@critteros.dev>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/*.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": [
        "./dist/*.cjs",
        "./dist/*/index.cjs"
      ],
      "import": [
        "./dist/*.js",
        "./dist/*/index.js"
      ]
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "prettier": "@hydra-ipxe/prettier-config",
  "dependencies": {
    "@pnpm/find-workspace-dir": "^6.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@hydra-ipxe/eslint-config-hydra": "workspace:*",
    "@hydra-ipxe/prettier-config": "workspace:*",
    "@hydra-ipxe/tsconfig": "workspace:*",
    "@types/node": "^20.8.4",
    "tsup": "^7.2.0"
  },
  "publishConfig": {
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ]
      }
    }
  }
}
