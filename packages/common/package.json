{
  "name": "@hydra-ipxe/common",
  "version": "0.0.0",
  "description": "Common code used between the hydra-ipxe server and web",
  "license": "MIT",
  "author": "Szymon Kozio≈Ç <contact@critteros.dev>",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint --ext .ts src",
    "test": "jest",
    "clean": "rimraf dist",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "exports": {
    ".": {
      "types": "./dist/*.d.ts",
      "dev": "./src/index.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "dev": "./src/*.ts",
      "require": [
        "./dist/*.cjs",
        "./dist/*/index.cjs"
      ],
      "import": [
        "./dist/*.js",
        "./dist/*/index.js"
      ]
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts",
        "dist/*/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "restoreMocks": true,
    "resetMocks": true,
    "randomize": true,
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "jsc": {
            "experimental": {
              "plugins": [
                [
                  "jest_workaround",
                  {}
                ]
              ]
            }
          }
        }
      ]
    },
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/$1"
    },
    "testTimeout": 60000
  },
  "prettier": "@hydra-ipxe/prettier-config",
  "dependencies": {
    "@pnpm/find-workspace-dir": "^6.0.2",
    "js-yaml": "^4.1.0",
    "nestjs-zod": "^3.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@hydra-ipxe/eslint-config-hydra": "workspace:*",
    "@hydra-ipxe/prettier-config": "workspace:*",
    "@hydra-ipxe/tsconfig": "workspace:*",
    "@swc/core": "^1.3.93",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.6",
    "@types/js-yaml": "^4.0.8",
    "@types/mock-fs": "^4.13.3",
    "@types/node": "^20.8.7",
    "jest": "^29.7.0",
    "jest_workaround": "^0.79.19",
    "mock-fs": "^5.2.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^7.2.0",
    "type-fest": "^4.5.0"
  }
}
