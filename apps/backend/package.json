{
  "name": "@hydra-ipxe/backend",
  "version": "0.0.0",
  "private": false,
  "description": "Hydra iPXE server",
  "license": "MIT",
  "author": "Szymon Kozio≈Ç <contact@critteros.dev>",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "repl": "dotenv -- nest start --entryFile repl",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "clean": "rimraf dist",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seeder.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seeder.ts"
  },
  "prettier": "@hydra-ipxe/prettier-config",
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.(spec|unit.test|intg.test|e2e.test|test)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/$1"
    },
    "testTimeout": 1200000,
    "setupFiles": [
      "<rootDir>/../setupTestEnv.ts"
    ]
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@hydra-ipxe/common": "workspace:*",
    "@nestjs/apollo": "^12.0.9",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/swagger": "^7.1.13",
    "@prisma/client": "5.4.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "connect-redis": "^7.1.0",
    "cookie": "^0.5.0",
    "debug": "^4.3.4",
    "dedent": "^1.5.1",
    "express-session": "^1.17.3",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "nestjs-zod": "^3.0.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "supertest-graphql": "^1.1.4",
    "testcontainers": "^10.2.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@hydra-ipxe/eslint-config-hydra": "workspace:*",
    "@hydra-ipxe/prettier-config": "workspace:*",
    "@hydra-ipxe/tsconfig": "workspace:*",
    "@mermaid-js/mermaid-cli": "^10.6.0",
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.93",
    "@testcontainers/postgresql": "^10.2.1",
    "@types/bcrypt": "^5.0.1",
    "@types/cookie": "^0.5.3",
    "@types/debug": "^4.1.10",
    "@types/express": "^4.17.20",
    "@types/express-session": "^1.17.9",
    "@types/hbs": "^4.0.4",
    "@types/jest": "^29.5.6",
    "@types/ms": "^0.7.33",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.8.7",
    "@types/passport": "^1.0.14",
    "@types/passport-local": "^1.0.37",
    "@types/supertest": "^2.0.15",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prisma": "^5.4.2",
    "prisma-erd-generator": "^1.11.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.14.0",
    "type-fest": "^4.5.0",
    "typescript": "latest"
  }
}
