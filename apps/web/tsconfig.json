{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@hydra-ipxe/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "$env": ["./src/env.mjs"],
      "$gql": ["./src/__generated__/index.ts"]
    },
    "moduleResolution": "node",
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
